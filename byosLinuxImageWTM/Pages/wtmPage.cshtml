        <img src=@Request.Query["imgURL"]>

        </div>
            
            <div class="form-group">
          <div class="form-group">
            <label asp-for="image.imgTitle" class="control-label" ></label>
            <input asp-for="image.imgTitle" class="form-control" />
            <span asp-validation-for="image.imgTitle" class="text-danger"></span>
        </div>     
                 
            </div>
          
            <div class="form-group">
                <input type="submit" value="Watermark" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
