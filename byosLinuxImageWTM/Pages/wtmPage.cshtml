@page
@model wtmPageModel
@{
   ViewData["Title"] = "Watermark";
   
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
           
            <input type="hidden" asp-for="image.Id" />
           
            <div class="form-group">
            <label asp-for="image.imgURL" class="control-label"></label>
