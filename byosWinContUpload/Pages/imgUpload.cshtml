@page
@model byosWinContUpload.Pages.imgUploadModel
@{
	
ViewData["Title"] = "Image Upload";
}

<div class="text-center">
   <h2> Upload Image to Azure Storage </h2>
</div>

&nbsp;
&nbsp;
&nbsp;

<form enctype="multipart/form-data" method="post">
    <table>
        <tr>
            <td><input type="file" id="file" asp-for="azfileUpload.uplFormFile" accept="image/gif, image/jpeg, image/png" ></td>
            
            
        </tr>
        <tr><td>&nbsp;</td></tr>
        <tr>
            <td><textarea asp-for="imgModel.imgTitle" ></textarea></td>
        </tr>
        <tr>
           <td> <input asp-page-handler="Upload" type="submit" value="Upload"></td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
 @{
        if (ViewData["Result"] != null)
        {
          <span > @ViewData["Result"]</span> 
        }
    }
            </td>
        </tr>
    </table>
     
   
</form>

